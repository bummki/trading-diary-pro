+import i18n from 'i18next'
+import { initReactI18next } from 'react-i18next'
+import LanguageDetector from 'i18next-browser-languagedetector'
+
+// Import translation resources. These files are generated alongside this configuration.
+import ko from './locales/ko.json'
+import en from './locales/en.json'
+import zh from './locales/zh.json'
+import ja from './locales/ja.json'
+import es from './locales/es.json'
+
+// Map our resource files into the shape expected by i18next.
+const resources = {
+  ko: { translation: ko },
+  en: { translation: en },
+  zh: { translation: zh },
+  ja: { translation: ja },
+  es: { translation: es },
+}
+
+// Initialise i18next. We use the browser language detector to detect the user's
+// preferred language via the URL path (e.g. /en/), localStorage (lang key), and
+// the browser's navigator setting. The default fallback language is Korean (ko).
+i18n
+  .use(LanguageDetector)
+  .use(initReactI18next)
+  .init({
+    resources,
+    fallbackLng: 'ko',
+    supportedLngs: ['ko', 'en', 'zh', 'ja', 'es'],
+    detection: {
+      // Check the first segment of the URL path for a language code. E.g. /en/
+      order: ['path', 'localStorage', 'navigator'],
+      lookupFromPathIndex: 0,
+      // Use a custom localStorage key rather than the default `i18nextLng`
+      lookupLocalStorage: 'lang',
+      caches: ['localStorage'],
+    },
+    interpolation: {
+      escapeValue: false, // React already escapes values by default
+    },
+    react: {
+      useSuspense: false,
+    },
+    // When a key is missing from the current locale file, enable saveMissing
+    // to collect missing keys. You can later use these to fill out other
+    // translations. This matches the specification's requirement to track
+    // missing translation keys automatically.
+    saveMissing: true,
+  })
+
+// Keep the <html lang="..."> attribute in sync with the active language.
+i18n.on('languageChanged', (lng) => {
+  if (typeof document !== 'undefined') {
+    document.documentElement.lang = lng
+  }
+})
+
+export default i18n
